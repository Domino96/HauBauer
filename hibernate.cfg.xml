<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HausBauerDB?zeroDateTimeBehavior=convertToNull&amp;createDatabaseIfNotExist=true&amp;serverTimezone=CET</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <!-- Mapping files here -->
        <mapping class="src.de.haubauer.db.entities.User"/>
        <mapping class="src.de.haubauer.db.entities.Person"/>
        <mapping class="src.de.haubauer.db.entities.RentalProperty"/>
        <mapping class="src.de.haubauer.db.entities.Payment"/>
        <mapping class="src.de.haubauer.db.entities.Tenancy"/>
        <mapping class="src.de.haubauer.db.entities.Address"/>
        <mapping class="src.de.haubauer.db.entities.BankAccount"/>

    </session-factory>
</hibernate-configuration>